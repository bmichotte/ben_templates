<h2><%%= t('<%= plural_table_name %>.list') %></h2>
<div class="btn-toolbar">
  <div class="btn-group">
    <%%= link_to content_tag(:i, '', :class => 'icon-plus icon-fixed-width').html_safe + t('<%= plural_table_name %>.new'), new_<%= singular_table_name %>_path, { class: 'btn btn-primary' } %>
  </div>
  <%%= form_tag request.path, :method => 'get', :class => 'form-inline' do %>
  <div class="form-group">
    <%%= search_field_tag :search, params[:search], :class => 'form-control', :placeholder => t('search') %>
  </div>
  <%% end %>
</div>

<table class="table table-striped table-hover">
  <thead>
      <tr>
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
            <th><%%= t('<%= plural_table_name %>.<%= attribute.name %>') %></th>
        <% end -%>
        <th class="centered"><%%= t('actions') %></th>
      </tr>
  </thead>
  <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end -%>
        <td class="centered">
          <%%= link_to content_tag(:i, '', :class => 'admin-links icon-edit', :title => t('edit')).html_safe, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %>
          <%%= link_to content_tag(:i, '', :class => 'admin-links icon-trash', :title => t('delete')).html_safe, <%= singular_table_name %>, {class: 'delete-obj', method: :delete, data: {confirm: t('confirm_delete')}} %>
        </td>
      </tr>
      <%% end %>
  </tbody>
</table>

<div class="centered">
  <%%= will_paginate @<%= plural_table_name %>, :renderer => WillPaginate::ActionView::BenLinkRenderer %>
</div>