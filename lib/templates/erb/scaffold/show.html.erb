<div class="btn-toolbar">
  <div class="btn-group">
    <%%= link_to content_tag(:i, '', :class => 'icon-edit icon-fixed-width').html_safe + t('scaffold.edit', :table => t('<%= plural_table_name %>.<%= singular_table_name %>')), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), { class: 'btn dropdow-toggle' } %>
  </div>
</div>

<% attributes.reject(&:password_digest?).each do |attribute| -%>
    <p>
      <strong><%%= t('<%= plural_table_name %>.<%= attribute.name %>') %>:</strong>
      <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
    </p>

<% end -%>
<div class="pagination">
  <ul>
    <li><%%= link_to t('scaffold.link.back'), <%= plural_table_name %>_path %></li>
  </ul>
</div>